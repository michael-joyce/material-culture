{% extends 'base.html.twig' %}

{% block title %}Shape{% endblock %}

 {% block pageheader %}
     <h1>Shape Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('shape_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('shape_edit', { 'id': shape.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('shape_delete', { 'id': shape.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Shape?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>

    {% embed 'NinesUtilBundle:term/partial:show.html.twig' with {'term': shape} %}
    {% endembed %}

    {% if shape.ceramics | length > 0 %}
        <h2>Ceramics</h2>
        <ul>
            {% for ceramics in shape.ceramics %}
                <li>
                    <a href="{{ path("ceramics_show", {"id":ceramics.id}) }}">
                        {{ ceramics }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
