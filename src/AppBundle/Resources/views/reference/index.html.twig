{% extends 'base.html.twig' %}

{% block title %}Reference List{% endblock %}

{% block pageheader %}
    <h1>Reference List</h1>
    <p class="count">
        Displaying {{ references|length }} references of {{ references.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
                        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('reference_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
                        <a href="{{ path('reference_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Description</th>
                </tr>
        </thead>
        <tbody>
        {% for reference in references %}
            <tr>
                <td>
                    <a href="{{ path('reference_show', { 'id': reference.id }) }}">
                        {{ reference.description }}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(references) }}
    </div>

{% endblock %}
