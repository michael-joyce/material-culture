{% extends 'base.html.twig' %}

{% block title %}Manufacturer{% endblock %}

 {% block pageheader %} 
    <h1>Manufacturer Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('manufacturer_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('manufacturer_edit', { 'id': manufacturer.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('manufacturer_delete', { 'id': manufacturer.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Manufacturer?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Created</th>
                <td>{% if manufacturer.created %}{{ manufacturer.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if manufacturer.updated %}{{ manufacturer.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if manufacturer.bottles | length > 0 %}    
    <h2>Bottles</h2>
    <ul>
        {% for bottles in manufacturer.bottles %}
        <li>
            <a href="{{ path("bottles_show", {"id":bottles.id}) }}">
                {{ bottles }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if manufacturer.cans | length > 0 %}    
    <h2>Cans</h2>
    <ul>
        {% for cans in manufacturer.cans %}
        <li>
            <a href="{{ path("cans_show", {"id":cans.id}) }}">
                {{ cans }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
