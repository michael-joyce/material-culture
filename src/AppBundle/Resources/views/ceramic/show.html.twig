{% extends 'base.html.twig' %}

{% block title %}Ceramic{% endblock %}

 {% block pageheader %}
     <h1>Ceramic Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('ceramic_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('ceramic_edit', { 'id': ceramic.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('ceramic_delete', { 'id': ceramic.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Ceramic?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>

    {% embed 'AppBundle:artefact/partial:show.html.twig' with {'artefact': ceramic} %}
        {% block callback %}
            <tr>
                <th>Paste</th>
                <td>{{ ceramic.paste }}</td>
            </tr>
            <tr>
                <th>Munsell</th>
                <td>{{ ceramic.munsell }}</td>
            </tr>
            <tr>
                <th>Shape</th>
                <td>
                    <a href="{{ path('shape_show', { 'id': ceramic.shape.id}) }}">
                        {{ ceramic.shape }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Glaze</th>
                <td>
                    <a href="{{ path('glaze_show', { 'id': ceramic.glaze.id}) }}">
                        {{ ceramic.glaze }}
                    </a>
                </td>
            </tr>
        {% endblock %}
    {% endembed %}

{% endblock %}
