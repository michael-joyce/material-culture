{% extends 'base.html.twig' %}

{% block title %}Can{% endblock %}

 {% block pageheader %}
     <h1>Can Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('can_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('can_edit', { 'id': can.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('can_delete', { 'id': can.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Can?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>

    {% embed 'AppBundle:artefact/partial:show.html.twig' with {'artefact': can} %}
        {% block callback %}
            <tr>
                <th>Company</th>
                <td>{{ can.company }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ can.brand }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ can.label }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>
                    {% if can.manufacturer %}
                        <a href="{{ path('manufacturer_show', { 'id': can.manufacturer.id}) }}">
                            {{ can.manufacturer }}
                        </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Packaging Location</th>
                <td>
                    {% if can.packagingLocation %}
                        <a href="{{ path('location_show', { 'id': can.packagingLocation.id}) }}">
                            {{ can.packagingLocation }}
                        </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Content</th>
                <td>
                    {% if can.content %}
                        <a href="{{ path('content_show', { 'id': can.content.id}) }}">
                            {{ can.content }}
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endblock %}
    {% endembed %}

    {% include 'NinesFeedbackBundle:comment:comment-interface.html.twig' with {'entity': can} %}

{% endblock %}
