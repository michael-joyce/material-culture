{% extends 'base.html.twig' %}

{% block title %}Can{% endblock %}

 {% block pageheader %}
     <h1>Can Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('can_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('can_edit', { 'id': can.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('can_delete', { 'id': can.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Can?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Company</th>
                <td>{{ can.company }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ can.brand }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ can.label }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>
                    <a href="{{ path('manufacturer_show', { 'id': can.manufacturer.id}) }}">
                        {{ can.manufacturer }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Content</th>
                <td>
                    <a href="{{ path('content_show', { 'id': can.content.id}) }}">
                        {{ can.content }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if can.created %}{{ can.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if can.updated %}{{ can.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
