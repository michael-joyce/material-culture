{% extends 'base.html.twig' %}

{% block title %}Typology List{% endblock %}

{% block pageheader %}
    <h1>Typology List</h1>
    <p class="count">
        Displaying {{ typologies|length }} typologies of {{ typologies.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('typology_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('typology_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'NinesUtilBundle:term/partial:index.html.twig' with {'terms': typologies, 'path': 'typology_show'} %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(typologies) }}
    </div>

{% endblock %}
