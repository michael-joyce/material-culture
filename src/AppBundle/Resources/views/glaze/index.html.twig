{% extends 'base.html.twig' %}

{% block title %}Glaze List{% endblock %}

{% block pageheader %}
    <h1>Glaze List</h1>
    <p class="count">
        Displaying {{ glazes|length }} glazes of {{ glazes.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('glaze_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('glaze_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'NinesUtilBundle:term/partial:index.html.twig' with {'terms': glazes, 'path': 'glaze_show'} %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(glazes) }}
    </div>

{% endblock %}
