{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

 {% block pageheader %}
     <h1>Image Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('image_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('image_edit', { 'id': image.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('image_delete', { 'id': image.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Image?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ image.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if image.created %}{{ image.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if image.updated %}{{ image.updated|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Original Name</th>
                <td>{{ image.originalName }}</td>
            </tr>
            <tr>
                <th>Image File Path</th>
                <td>{{ image.imageFilePath }}</td>
            </tr>
            <tr>
                <th>Thumbnail Path</th>
                <td>{{ image.thumbnailPath }}</td>
            </tr>
            <tr>
                <th>Image Size</th>
                <td>{{ image.imageSize }}</td>
            </tr>
            <tr>
                <th>Image Width</th>
                <td>{{ image.imageWidth }}</td>
            </tr>
            <tr>
                <th>Image Height</th>
                <td>{{ image.imageHeight }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
