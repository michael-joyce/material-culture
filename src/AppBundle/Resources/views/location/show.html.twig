{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

 {% block pageheader %} 
    <h1>Location Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('location_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
                {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('location_edit', { 'id': location.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('location_delete', { 'id': location.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Location?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
            </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Geoname Id</th>
                <td>{{ location.geonameId }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ location.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ location.longitude }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if location.created %}{{ location.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if location.updated %}{{ location.updated|date }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if location.artefactsRecovered | length > 0 %}    
    <h2>Artefactsrecovered</h2>
    <ul>
        {% for artefactsRecovered in location.artefactsRecovered %}
        <li>
            <a href="{{ path("artefactsRecovered_show", {"id":artefactsRecovered.id}) }}">
                {{ artefactsRecovered }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if location.artefactsManufactured | length > 0 %}    
    <h2>Artefactsmanufactured</h2>
    <ul>
        {% for artefactsManufactured in location.artefactsManufactured %}
        <li>
            <a href="{{ path("artefactsManufactured_show", {"id":artefactsManufactured.id}) }}">
                {{ artefactsManufactured }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
