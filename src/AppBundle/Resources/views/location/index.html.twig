{% extends 'base.html.twig' %}

{% block title %}Location List{% endblock %}

{% block pageheader %}
    <h1>Location List</h1>
    <p class="count">
        Displaying {{ locations|length }} locations of {{ locations.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('location_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('location_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'NinesUtilBundle:term/partial:index.html.twig' with {'terms': locations, 'path': 'location_show'} %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(locations) }}
    </div>

{% endblock %}
