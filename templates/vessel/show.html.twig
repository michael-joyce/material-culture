{% extends 'base.html.twig' %}

{% block title %}Vessel{% endblock %}

 {% block pageheader %}
     <h1>Vessel Details</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('vessel_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('vessel_edit', { 'id': vessel.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit </a>
                <a href="{{ path('vessel_delete', { 'id': vessel.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Vessel?">
                    <span class='glyphicon glyphicon-remove'></span> Delete </a>
            {% endif %}
        </div>
    </div>

    {% embed '@NinesUtil/term/partial/show.html.twig' with {'term': vessel} %}
    {% endembed %}

    {% if vessel.ceramics | length > 0 %}
        <h2>Ceramics</h2>
        <ul>
            {% for ceramic in vessel.ceramics %}
                <li>
                    <a href="{{ path("ceramic_show", {"id":ceramic.id}) }}">
                        {{ ceramic }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
