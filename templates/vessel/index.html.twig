{% extends 'base.html.twig' %}

{% block title %}Vessel List{% endblock %}

{% block pageheader %}
    <h1>Vessel List</h1>
    <p class="count">
        Displaying {{ vessels|length }} vessels of {{ vessels.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('vessel_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('vessel_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'NinesUtilBundle:term/partial:index.html.twig' with {'terms': vessels, 'path': 'vessel_show'} %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(vessels) }}
    </div>

{% endblock %}
