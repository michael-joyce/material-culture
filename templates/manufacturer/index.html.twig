{% extends 'base.html.twig' %}

{% block title %}Manufacturer List{% endblock %}

{% block pageheader %}
    <h1>Manufacturer List</h1>
    <p class="count">
        Displaying {{ manufacturers|length }} manufacturers of {{ manufacturers.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('manufacturer_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
            <a href="{{ path('manufacturer_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed '@NinesUtil/term/partial/index.html.twig' with {'terms': manufacturers, 'path': 'manufacturer_show'} %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(manufacturers) }}
    </div>

{% endblock %}
